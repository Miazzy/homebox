# Main repository
deb http://{{ repo.main }}/debian/  {{ repo.release }} {{ repo.sections }}
# deb-src http://{{ repo.main }}/debian/ {{ repo.release }} {{ repo.sections }}

# Security updates
deb http://{{ repo.security }}/debian-security  {{ repo.release }}/updates {{ repo.sections }}
# deb-src http://{{ repo.security }}/debian-security  {{ repo.release }}/updates {{ repo.sections }}

# Main updates, previously known as 'volatile'
deb http://{{ repo.main }}/debian/  {{ repo.release }}-updates main contrib non-free
# deb-src http://{{ repo.main }}/debian/  {{ repo.release }}-updates {{ repo.sections }}

# Backports, previously on backports.debian.org
deb http://{{ repo.main }}/debian/  {{ repo.release }}-backports main contrib non-free
# deb-src http://{{ repo.main }}/debian/  {{ repo.release }}-backports {{ repo.sections }}
